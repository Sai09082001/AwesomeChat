<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.awesomechat.fragment.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splash_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splash_to_homeMessageFragment"
            app:destination="@id/homeMessageFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.awesomechat.fragment.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/register_fragment">
        <action
            android:id="@+id/action_register_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.awesomechat.fragment.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_login_to_homeMessageFragment"
            app:destination="@id/homeMessageFragment" />
        <action
            android:id="@+id/action_login_to_regisFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeMessageFragment"
        android:name="com.example.awesomechat.fragment.HomeMessageFragment"
        android:label="HomeMessageFragment"
        tools:layout="@layout/home_message_fragment" >

        <action
            android:id="@+id/action_home_to_myPageFragment"
            app:destination="@id/myPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.example.awesomechat.fragment.MyPageFragment"
        android:label="MyPageFragment"
        tools:layout="@layout/my_page_fragment" >

        <action
            android:id="@+id/action_myPage_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/friendFragment"
        android:name="com.example.awesomechat.fragment.FriendFragment"
        android:label="FriendFragment"
        tools:layout="@layout/friend_fragment" >

    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.awesomechat.fragment.EditProfileFragment"
        android:label="EditProfileFragment"
        tools:layout="@layout/edit_profile_fragment" >

    </fragment>

</navigation>