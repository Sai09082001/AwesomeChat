<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.awesomechat.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/splash_fragment">
        <action
            app:popUpToInclusive="true"
            app:popUpTo="@id/splashFragment"
            android:id="@+id/action_splash_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.awesomechat.ui.register.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/register_fragment"/>
    <action
        app:popUpTo="@id/registerFragment"
        app:popUpToInclusive="true"
        android:id="@+id/action_register_to_loginFragment"
        app:destination="@id/loginFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.awesomechat.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_fragment" >
        <action
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            android:id="@+id/action_login_to_homeMessageFragment"
            app:destination="@id/homeMessageFragment" />
        <action
            android:id="@+id/action_login_to_regisFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeMessageFragment"
        android:name="com.example.awesomechat.ui.homemessage.HomeMessageFragment"
        android:label="HomeMessageFragment"
        tools:layout="@layout/home_message_fragment" />
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.awesomechat.ui.editprofile.EditProfileFragment"
        android:label="EditProfileFragment"
        tools:layout="@layout/edit_profile_fragment" >

    </fragment>

</navigation>