<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="36dp"
        android:textSize="24sp"
        android:layout_marginStart="24dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#4356B4"
        android:text="Đăng ký"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:fontFamily="sans-serif-medium"
        android:textColor="#676767"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:text="HỌ VÀ TÊN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_name_regis"
            android:textColor="#676767"
            android:layout_marginEnd="24dp"
            android:textSize="20sp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="24dp"
            android:layout_width="match_parent"
            android:hint="yourname"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_profile" />
    </FrameLayout>
    <TextView
        android:fontFamily="sans-serif-medium"
        android:textColor="#676767"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:text="EMAIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/edt_email_regis"
            android:textColor="#676767"
            android:layout_marginEnd="24dp"
            android:textSize="20sp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="24dp"
            android:layout_width="match_parent"
            android:hint="yourname@gmail.com"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:layout_gravity="top|end"
            android:src="@drawable/ic_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:fontFamily="sans-serif-medium"
        android:textColor="#676767"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:text="MẬT KHẨU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_password_regis"
            android:textColor="#676767"
            android:layout_marginEnd="24dp"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:layout_marginTop="6dp"
            android:layout_marginStart="24dp"
            android:layout_width="match_parent"
            android:hint="********"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:layout_gravity="top|end"
            android:src="@drawable/ic_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:buttonTint="#4356B4"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:id="@+id/cb_accept"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/custom_checkbox" />

            <TextView
                android:layout_marginStart="5dp"
                android:textSize="15sp"
                android:layout_gravity="end"
                android:fontFamily="sans-serif-medium"
                android:textColor="#676767"
                android:text="Tôi đồng ý với các "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="15sp"
                android:layout_gravity="end"
                android:fontFamily="sans-serif-medium"
                android:textColor="#4356B4"
                android:text="chính sách"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="15sp"
                android:layout_gravity="end"
                android:fontFamily="sans-serif-medium"
                android:textColor="#676767"
                android:text=" và"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="5dp"
                android:textSize="15sp"
                android:layout_gravity="end"
                android:fontFamily="sans-serif-medium"
                android:textColor="#4356B4"
                android:text="điều khoản"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_register"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="18sp"
        android:text="ĐĂNG KÝ"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:background="@drawable/custom_button_login"
        android:layout_height="wrap_content"/>
    <TableRow
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14sp"
            android:layout_gravity="end"
            android:fontFamily="sans-serif-medium"
            android:textColor="#676767"
            android:text="Đã có tài khoản?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_login_now"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:fontFamily="sans-serif-medium"
            android:textColor="#4356B4"
            android:text="Đăng nhập ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>
</LinearLayout>
</layout>