<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:paddingVertical="@dimen/d_6"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/d_6"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/d_50"
            app:civ_border_width="0.5dp"
            android:layout_gravity="center|start"
            android:layout_height="@dimen/d_50"
            android:src="@drawable/ic_avatar"
            app:civ_border_color="@color/gray" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_user_name"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_18"
            android:layout_marginStart="@dimen/d_60"
            android:text="@string/txt_user_name"
            android:layout_marginTop="@dimen/d_4"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_last_message"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_16"
            android:layout_marginStart="@dimen/d_60"
            android:text="@string/txt_chat"
            android:layout_marginTop="@dimen/d_28"
            android:layout_gravity="start"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_last_time"
            android:text="@string/txt_time"
            android:visibility="visible"
            android:paddingVertical="@dimen/d_4"
            android:paddingHorizontal="@dimen/d_16"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/d_12"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</layout>